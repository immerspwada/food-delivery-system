{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth/$1"
    },
    {
      "source": "/api/user/(.*)",
      "destination": "/api/user/$1"
    },
    {
      "source": "/api/restaurant/(.*)",
      "destination": "/api/restaurant/$1"
    },
    {
      "source": "/api/menu/(.*)",
      "destination": "/api/menu/$1"
    },
    {
      "source": "/api/order/(.*)",
      "destination": "/api/order/$1"
    },
    {
      "source": "/api/system/(.*)",
      "destination": "/api/system/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
